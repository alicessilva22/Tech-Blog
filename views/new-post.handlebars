<div class="post-card">
    <div class="post-card-header">
        <h2>Create New Post</h2>
    </div>
    <form id="new-post-form" class="card-body">
        <label class="form-label" for="post-title">{{title}}</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />

        <label class="form-label" for="post-body">{{post-body}}</label>
        <textarea id="post-body" name="post-body" class="form-input"></textarea>

        <button type="submit" class="create-btn">Create</button>
    </form>
</div>

<script src="/js/new.js"></script>